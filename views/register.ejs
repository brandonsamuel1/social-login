<%- include('partials/header') %>


<body class="text-center">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div>
          <div class="card-body">
            <form action="/register" class="form-signin" method="POST">
              <img class="mb-4" src="img/icons8-lock-96.png" alt="" width="200" height="200">
              <h1 class="h3 mb-3 font-weight-normal">Register</h1>
              
              <input name="username" type="username" class="form-control bottom" placeholder="Username">
              <input name="email" type="email" class="form-control bottom" placeholder="Email">
              <input name="password" type="password" class="form-control bottom" placeholder="Password">
              <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Me Up</button>
            </form>
            <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button"><span class="fa fa-google"></span>Register with Google</a>
            <a class="btn btn-block btn-social btn-facebook" href="/auth/facebook" role="button"><span class="fa fa-facebook"></span>Register with Facebook</a>
          </div>
        </div>
      </div>
    </div>
